# PsyFi Environment Configuration
# Copy this file to .env and fill in the values

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ABX-Core Settings
DEFAULT_SEED=1337
ENABLE_PROVENANCE=true
ENABLE_METRICS=true

# Preset Settings
PRESETS_PATH=psyfi_core/presets/substance_presets.json
ENABLE_SAFETY_CLAMP=true
DEFAULT_INTENSITY=1.0

# API Rate Limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Security
SECRET_KEY=change-me-in-production
API_KEY_REQUIRED=false

# Monitoring (optional)
SENTRY_DSN=
ENABLE_TELEMETRY=false

# Database (if using persistent storage in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/psyfi

# Redis (if using caching in future)
# REDIS_URL=redis://localhost:6379/0
