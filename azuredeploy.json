{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Web App."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for the resources."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": ["B1", "B2", "B3", "S1", "S2", "S3", "P1v3", "P2v3", "P3v3"],
      "metadata": {
        "description": "App Service plan SKU."
      }
    },
    "linuxFxVersion": {
      "type": "string",
      "defaultValue": "PYTHON|3.11",
      "metadata": {
        "description": "Runtime stack for the Web App."
      }
    },
    "appCommandLine": {
      "type": "string",
      "defaultValue": "python -m uvicorn psyfi_api.main:app --host 0.0.0.0 --port 8000 --workers 4 --proxy-headers",
      "metadata": {
        "description": "Startup command for the FastAPI application."
      }
    }
  },
  "variables": {
    "planName": "[format('{0}-plan', parameters('name'))]",
    "webAppUrl": "[format('https://{0}.azurewebsites.net', parameters('name'))]",
    "skuMap": {
      "B1": { "tier": "Basic", "size": "B1", "family": "B", "capacity": 1 },
      "B2": { "tier": "Basic", "size": "B2", "family": "B", "capacity": 1 },
      "B3": { "tier": "Basic", "size": "B3", "family": "B", "capacity": 1 },
      "S1": { "tier": "Standard", "size": "S1", "family": "S", "capacity": 1 },
      "S2": { "tier": "Standard", "size": "S2", "family": "S", "capacity": 1 },
      "S3": { "tier": "Standard", "size": "S3", "family": "S", "capacity": 1 },
      "P1v3": { "tier": "PremiumV3", "size": "P1v3", "family": "PV3", "capacity": 1 },
      "P2v3": { "tier": "PremiumV3", "size": "P2v3", "family": "PV3", "capacity": 1 },
      "P3v3": { "tier": "PremiumV3", "size": "P3v3", "family": "PV3", "capacity": 1 }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2023-01-01",
      "name": "[variables('planName')]",
      "location": "[parameters('location')]",
      "kind": "linux",
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "[variables('skuMap')[parameters('sku')].tier]",
        "size": "[variables('skuMap')[parameters('sku')].size]",
        "family": "[variables('skuMap')[parameters('sku')].family]",
        "capacity": "[variables('skuMap')[parameters('sku')].capacity]"
      },
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2023-01-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "kind": "app,linux",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('planName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "linuxFxVersion": "[parameters('linuxFxVersion')]",
          "appSettings": [
            {
              "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
              "value": "1"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            }
          ],
          "appCommandLine": "[parameters('appCommandLine')]",
          "alwaysOn": true,
          "http20Enabled": true
        }
      }
    }
  ],
  "outputs": {
    "webAppName": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[variables('webAppUrl')]"
    }
  }
}
